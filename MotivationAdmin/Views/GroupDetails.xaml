<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotivationAdmin.GroupDetails"

             Title="{Binding GroupName}">
    <StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="40,40,40,40">
            <Label Text="CODE: " FontAttributes="Bold" FontSize="Large"/>
            <Label Text="{Binding GroupShareId}" FontAttributes="Italic" FontSize="Large"/>
        </StackLayout>
        <Button Text="Show Users" Clicked="Users_Clicked"/>
        <Button Text="Show Messages" Clicked="ShowMessages_Clicked"/>
        <Button Text="Show Group Stats"/>
    </StackLayout>

</ContentPage>