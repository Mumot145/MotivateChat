<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotivationAdmin.Views.GroupUsers"
             Title="{Binding GroupNameUserTitle}">
    <AbsoluteLayout>
        <ListView ItemsSource="{Binding UserList}" ItemSelected="ListView_ItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding ToDo}" FontSize="Medium" HorizontalOptions="Start"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    <Button  AbsoluteLayout.LayoutBounds="0.90, 0.90, 0.25, 0.10"
                   BackgroundColor="Green"
                   BorderRadius="50"
                   Clicked="OnAlertYesNoClicked"
                   Text="..."
                   AbsoluteLayout.LayoutFlags="All" />
    </AbsoluteLayout>
</ContentPage>