<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotivationAdmin.Views.NewUser"
             Title="Adding New Group Member">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Add Member:" VerticalOptions="Center" Margin="25,0,0,0"/>
            <Entry Placeholder="Users Email Address" x:Name="newGroupMember"/>
        </StackLayout>
        <Button Text="Add Member" Clicked="AddMember"/>
        <Label x:Name="notFound" FontSize="Large" IsVisible="False" Text="Email cannot be null." TextColor="Red"/>
        <Label x:Name="badFormat" FontSize="Large" IsVisible="False" Text="Email is not in correct format." TextColor="Red"/>
    </StackLayout>
    
    
    
</ContentPage>