<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotivationAdmin.Views.SoloDetails">
    <StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="40,40,40,40">
            <Label Text="CODE: " FontAttributes="Bold" FontSize="Large"/>
            <Label x:Name="lblCode" FontAttributes="Italic" FontSize="Large"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="40,40,40,40">
            <Label Text="User in Solo Chat: " FontSize="Medium"/>
            <Label x:Name="soloUser" FontAttributes="Italic" FontSize="Medium"/>
            <Label x:Name="noUser" FontAttributes="Italic" FontSize="Medium" IsVisible="False"/>
        </StackLayout>
        <Button Text="Show Messages" Clicked="ShowMessages_Clicked"/>
        <Button Text="Show Group Stats"/>
    </StackLayout>
</ContentPage>